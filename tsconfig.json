{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": ["es5", "es2015", "es7", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "noUnusedLocals": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "target": "es2015",
    "pretty": true,
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": ["./src/core/**/*", "./src/test/**/*"],
  "exclude": ["node_modules", "jest"]
}
